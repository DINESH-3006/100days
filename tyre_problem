
import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class tyre_problem 
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
        Scanner sc=new Scanner(System.in);
        int ip=sc.nextInt();
        while(ip>0){
            int m=sc.nextInt();
            int n=sc.nextInt();
            int ans=(m*2)+(n*4);
            System.out.println(ans);
            ip--;
        }
	}
}
