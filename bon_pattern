import java.util.*;
class bon_pattern {
    public static void main(String[] args) {
      //  System.out.println("Hello, World!");
      Scanner sc=new Scanner(System.in);
      int n=sc.nextInt();
      for(int i=1;i<=n;i++){
          for(int j=0;j<i;j++){
              System.out.print("* ");
              
          }
          System.out.println();
      }
    }
}
